<% title(@project.name, "Projects") %>
<h2> <%= @project.name %> </h2>
<table border=1>
  <tr>
    <td>
      <%= link_to "Edit Project", edit_project_path(@project) %> </td>
    <td>
      <%= link_to "Delete Project",
            project_path(@project),
            method: :delete,
            data: { confirm:
                      "are u sure you want to delete this project"
                  } %> </td>
    <td>
      <%= link_to "all projects", projects_path(@project) %> </td>
    <td>
      <%= link_to "New Ticket", new_project_ticket_path(@project) %></td>
  </tr>
<table>

<table border=1>
  <ul id='tickets'>
    <% @project.tickets.each do |ticket|%>
      <tr>
        <td>
          <li>
            #<%= ticket.id %> -
            <%= link_to ticket.title, [@project, ticket]%>
          </li>
        </td>
      </tr>
    <% end %>
  </ul>
</table>
